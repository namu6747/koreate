<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.collections.*?>
<?import javafx.scene.input.KeyCodeCombination?>


<BorderPane
 prefHeight="200.0" prefWidth="400.0"
	xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
	fx:controller="main.RootController">
	<top>
		<VBox BorderPane.alignment="CENTER">
			<children>
				<MenuBar>
					<menus>
						<Menu text="파일">
							<items>
								<MenuItem text="새로만들기" onAction="#handleNew" >
									<accelerator>
									    <!-- 바로가기 window 나 리눅스 ctrl, Mac 은 meta를 얘기함 -->
										<KeyCodeCombination alt="DOWN" shift="UP"
															meta="UP" control="UP"
															code="N" shortcut="UP" />
									</accelerator>
									<graphic>
										<ImageView>
											<image>
												<Image url="@../icons/new.png"/>
											</image>
										</ImageView>
									</graphic>
								</MenuItem>
								<MenuItem text="열기" onAction="#handleOpen">
									<accelerator>
										<KeyCodeCombination 
											alt="UP" shift="UP" 
											control="DOWN" meta="UP" 
											code="O" shortcut="UP" />
									</accelerator>
									<graphic>
										<ImageView>
											<image>
												<Image url="@../icons/open.png"/>
											</image>
										</ImageView>
									</graphic>
								</MenuItem>
								<MenuItem text="저장" onAction="#handleSave">
									<accelerator>
										<KeyCodeCombination 
											alt="UP" shift="UP" 
											control="DOWN" meta="UP" 
											code="S" shortcut="UP" />
									</accelerator>
									<graphic>
										<ImageView>
											<image>
												<Image url="@../icons/save.png"/>
											</image>
										</ImageView>
									</graphic>
								</MenuItem>
								<SeparatorMenuItem />
								<MenuItem text="닫기" onAction="#handleClose"/>
							</items>
						</Menu>
						<Menu text="편집">
							<items>
								<MenuItem text="Delete" />
							</items>
						</Menu>
						<Menu text="이동">
							<items>
								<MenuItem text="About" />
							</items>
						</Menu>
					</menus>
				</MenuBar>
				<ToolBar prefHeight="40.0" prefWidth="200.0">
					<items>
						<Button onAction="#handleNew">
							<graphic>
								<ImageView >
									<image>
										<Image url="@../icons/new.png" />
									</image>
								</ImageView>
							</graphic>
						</Button>
						<Button onAction="#handleOpen">
							<graphic>
								<ImageView >
									<image>
										<Image url="@../icons/open.png" />
									</image>
								</ImageView>
							</graphic>
						</Button>
						<Button onAction="#handleSave">
							<graphic>
								<ImageView >
									<image>
										<Image url="@../icons/save.png" />
									</image>
								</ImageView>
							</graphic>
						</Button>
						<ComboBox fx:id="comboBox" prefWidth="150.0" promptText="선택">
							<items>
								<FXCollections fx:factory="observableArrayList">
									<String fx:value="directory chooser"/>
									<String fx:value="popUp Window"/>
									<String fx:value="Custom Window"/>
									<String fx:value="Custom Dialog"/> 
								</FXCollections>
							</items>
						</ComboBox>
					</items>
				</ToolBar>
			</children>
		</VBox>
	</top>
	<center>
		<TextArea fx:id="textArea" />
	</center>
</BorderPane>
